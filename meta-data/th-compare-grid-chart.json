{
  "name": "th-compare-grid-chart",
  "description": "Thelma Compare Grid",
  "category":"textual",
  "version": "0.0.1",
  "thumbnail":"comparison.jpg", 
  "tags":["chart", "image"],
  "helpLink":"",
  "width":200,
  "height":250,
  "inputAttr": {
    "chartData":{"friendly":"Data", "type":"table-fixed","rows":2, 
       "fields":{
        "label":{"friendly":"Label", "type":"string", "default":"Smoker"},
        "value":{"friendly":"Value", "type":"int", "default":3},
        "image":{"friendly":"Image", "type":"image", "default":"/elements/images/kid.png"}
      },
      "default":[
        {"label": "Non-Smoker", "value": 33, "image": "/bower_components/thelma-components/images/kid.png"},
        {"label": "Smoker", "value": 1, "image": "/bower_components/thelma-components/images/kid-smoker.png"}
      ]
    },
    "imagesPerRow":{"friendly":"Images per row", "type":"int", "default":-1},
    "animationDuration":{"friendly":"Animation duration (ms)", "type":"int", "default":200},
    "iconTransition":{"friendly":"Icon transition", "type":"dropdown","default":"random", "values":["random", "drop"]}
  }
}