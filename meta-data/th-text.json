{
  "name": "th-text",
  "description": "Th text w/Markdown",
  "category":"textual",
  "version": "0.0.1",
  "thumbnail":"markdown.jpg",
  "tags":["textual", "Markdown"],
  "inputAttr": {
    "width":{"friendly":"Width", "type":"int", "default":280},
    "content":{"friendly":"Text/Markdown", "type":"content", "default":"Enter Text..."},
    "type":{
      "friendly":"Type",
      "type":"dropdown", 
      "values": ["headline","mainpoint", "submainpoint", "subpoint", "chart", "label", "caps"],
      "default": "mainpoint"
    },
    "align":{
      "friendly":"Align",
      "type":"dropdown", 
      "values": ["left", "right", "center", "justify"],
      "default": "left"
    },
    "color":{"friendly":"Text Color", "type":"colorPicker", "default":""},
    "highlighting":{
      "friendly":"Highlighting", 
      "type":"colorPicker", 
      "default":""
    },
    "background":{
      "friendly":"Background Color", 
      "type":"colorPicker", 
      "default":""
    },
    "opacity":{
      "friendly":"Background Opacity", 
      "type":"int", 
      "default":1
    },
    "markdown":{"friendly":"Markdown?", "type":"boolean", "default":"true"}
  }
}