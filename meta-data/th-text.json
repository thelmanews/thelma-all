{
  "name": "th-text",
  "description": "Text with Markdown",
  "category":"textual",
  "version": "0.0.1",
  "thumbnail":"markdown.jpg",
  "tags":["textual", "Markdown"],
  "helpLink":"http://composer.thelma.co/admin/composer/demos/markdown",
  "width":281,
  "height":100,
  "inputAttr": {
    "content":{
      "friendly":"Text/Markdown", 
      "type":"content", 
      "default":"Enter Text..."
    },
    "markdown":{
      "friendly":"Markdown", 
      "type":"boolean", 
      "default":"true"
    },
    "type":{
      "friendly":"Text size",
      "type":"dropdown", 
      "values": ["large-headline","medium-headline","headline","mainpoint", "submainpoint", "subpoint", "chart", "label", "caps"],
      "default": "mainpoint"
    },
    "fontStyle":{
      "friendly":"Font style",
      "type":"dropdown",
      "default":"", 
      "values":["","serif","sans-serif"], 
      "applyTo":"class"
    },
    "align":{
      "friendly":"Text align",
      "type":"dropdown", 
      "values": ["left", "right", "center", "justify"],
      "default": "left"
    },
    "colorOptions": {
      "friendly":"Color options",
      "type":"group",
      "inputAttr":{
        "color":{
          "friendly":"Text Color", 
          "type":"colorPicker", 
          "colorDefault":"foreground1", 
          "default":""
        },
        "highlighting":{
          "friendly":"Highlighting", 
          "type":"colorPicker", 
          "colorDefault":"", 
          "default":""
        },
        "background":{
          "friendly":"Background Color", 
          "type":"colorPicker", 
          "colorDefault":"", 
          "default":""
        },
        "opacity":{
          "friendly":"Background Opacity", 
          "type":"int", 
          "default":1,
          "showIf": {
            "background":true
          }
        }
      }
    }
  }
}