{
  "name": "th-countup-num",
  "description": "Thelma Counter",
  "category":"numberic",
  "version": "0.0.1",
  "thumbnail":"counter.jpg",
  "helpLink":"",
  "width":200,
  "height":45,
  "inputAttr": {
    "content":{"friendly":"Number and text", "type":"content", "default":"Count to 40"}, 
    "alignment":{"friendly":"Align","type":"dropdown", "values": ["left","right", "center", "justify"], "default": "left"},
    "startFrom":{"friendly":"Start from", "type":"int", "default":0},
    "duration":{"friendly":"Duration", "type":"int", "default":2},   
    "numberStyle":{
      "friendly": "Number Style",
      "type": "group",
      "inputAttr": {
        "numberColor":{"friendly":"Number color", "type":"colorPicker", "colorDefault":"foreground1", "default":""}, 
        "numberSizeEm":{"friendly":"Number size ratio", "type":"int", "default":1.5},  
        "separator":{"friendly":"Thousands separator", "type":"string", "default":","},
        "startFromSameNumberOfDigit":{"friendly":"Consistent digits", "type":"boolean", "default":"true"},
        "growNumber":{"friendly":"Grow number", "type":"boolean", "default":false}
      }
    },
    "textStyle":{
      "friendly": "Text style",
      "type": "group",
      "inputAttr": {
        "color":{"friendly":"Text color", "type":"colorPicker", "colorDefault":"foreground1", "default":""}, 
        "type":{"friendly":"Text type","type":"dropdown", "values": ["large-headline","medium-headline","headline","mainpoint", "submainpoint", "subpoint", "chart", "label", "caps"], "default": "mainpoint"},
        "markdown":{"friendly":"Markdown", "type":"boolean", "default":true},
        "fontStyle":{"friendly":"Font style","type":"dropdown","default":"", "values":["","serif","sans-serif"], "applyTo":"class"}
      }
    }
  }
} 